@import '../movie-list/movie-list';
.session-tab{
  width: 100%;
  display: flex;
  position: fixed;
  top: 0;
  background: #fff;
  border-width: 2rpx 0 ;
  border-color: #e9e9e9;
  border-style: solid;
  z-index: 12;
}
.tab-name {
  flex: 1;
  font-weight: 600;
  text-align: center;
  height: 84rpx;
  line-height: 84rpx;
}
.tab-normal {
  color: #ccc;
}
.tab-select {
  color: lightgreen;
  border-bottom: 4rpx solid lightgreen;
}

.session-movie {
  margin-top: 88rpx;
  background: #fff;
}
 .scroll-movie {
  height: 100vh;
} 